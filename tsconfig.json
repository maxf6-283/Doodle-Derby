  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": false,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts", 
    "src/pages/gameplay_page.tsx", 
    "src/pages/pick_words_page.tsx", 
    "src/pages/lobby_page.tsx", 
    "src/pages/landing_page.tsx",
    "api/draw/artist_canvas_component.tsx"
  ]

}
